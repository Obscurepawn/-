/*上面的四个icon的框架位置*/
.operation-list{
  width:100%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.operation-list .item{
  width:10%;
  text-align: center;
}

.operation-list .item image{
  width: 60rpx;
  height:60rpx;
}

/*输入框的位置及细节*/
.inputBox{
  background-color: #fff;
  width: 90%;
  display: block;
  border-radius: 5px;
  margin: 40rpx;
  box-sizing: border-box;  
}
/*点击Tt调整字号按钮弹出的调整字号框框的总体框架*/
.font-box{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height: 150rpx;
  background-color: #efefef;
  display:none;
  z-index: 99;
}

.show{
  display: block;
}

/*调整 字号 这两个字的细节*/
.font-box text{
  margin:0 10px;
  font-size: 16px;
  font-weight: 400;
  color:#4c4343;
}

/*调整字号这两个字的位置*/
.font-box .font{
  margin-top:15px;
  width:100%;
  height:40px;
  line-height: 40px;
}

/*4个Aa的总体框架位置*/
.size{
  position: fixed;
  bottom:8px;
  left:50px;
  width:80%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

/*4个Aa的具体实现细节*/
.fontSize{
  width:40px;
  height: 40px;
  background-color: #fff;
  line-height: 40px;
  text-align: center;
  border: 1px solid #efefef;
  border-radius: 5px;
  font-size:12px;
}

/*点击画盘icon调整字号按钮弹出的调整字号框框的总体框架*/
.color-box{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height: 150rpx;
  background-color: #efefef;
  display:none;
  z-index: 99;
}

.show{
  display: block;
}
/*调整颜色这两个字的位置*/
.color-box .font2{
  margin-top:13px;
  width:100%;
  height:40px;
  line-height: 40px;
}
/*颜色二字的细节*/
.color-box text{
  margin:0 10px;
  font-size: 16px;
  font-weight: 400;
  color:#4c4343;
}

/*4个颜色框的总体框架位置*/
.color{
  position: fixed;
  bottom:8px;
  left:50px;
  width:80%;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
/*4个颜色框的具体实现细节*/
.fontColor{
  width:40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 15px;
  font-size:12px;
}

/*输入文章标题的框架*/
.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal .dialog {
    width: 84%;
    height: 28%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}
.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.modal-button view {
    width: 50%;
    border-top: 2rpx solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* //弹出框样式 */

.popup {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
  width: 500rpx;
  height: 400rpx;
  border-radius: 8rpx;
  background: #fff;
  z-index: 99;
}

.popup-view {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 9999;
}

.popup-icon {
  position: absolute;
  right: 0;
  top: -60rpx;
  z-index: 999;
  font-size: 45rpx;
  color: #fff;
}

.popup .text {
  padding-top: 84rpx;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.popup .btn, .bind-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 340rpx;
  height: 80rpx;
  margin-top: 58rpx;
  line-height: 80rpx;
  background-size: cover;
  text-align: center;
  background-image: url("https://imgs.xqphh.pandabg.cn/miniappindex-btn.png");
}

.topicRecording {
  float: left;
  width: 40%;
  height: 100%;
  position: relative;
}


.modal-button {
  position: absolute;
  width: 100%;
  height: 20%;
  border-top: 1px solid rgba(232, 233, 234, 1);
  text-align: center;
  padding-top: 15rpx;
  display: flex;
  justify-content: center;
}

.modal-button-text {
  display: block;
  padding-top: 6rpx;
}

.circle-box {
  height: 80%;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}


