<view>
  <view style="position:absolute;width:100%;height:100%;background-color:rgb(27,188,155)" wx:if="{{loading==true}}">
    <view class="spinner">
      <view class="rect1"></view>
      <view class="rect2"></view>
      <view class="rect3"></view>
      <view class="rect4"></view>
      <view class="rect5"></view>
    </view>
  </view>
  <view class="background" wx:if="{{loading==false}}">
    <view class="date">
      <view class="dateDetail">
        <view>{{month}}/{{day}}</view>
      </view>
      <view class="dateYearWeek">
        <view class="dateYear">
          <view>{{year}}</view>
        </view>
        <view class="dateWeek">
          <view>{{week}}</view>
        </view>
      </view>
    </view>
    <view class="line"></view>
    <view class="swiper">
      <swiper autoplay interval="1000" circular style='width:90%;overflow:hidden;border-radius:20rpx'>
        <swiper-item mode='widthFix' wx:for="{{list}}" wx:key="{{key}}" wx:if="{{item.img.length>0}}">
          <image src="{{item.img}}"></image>
        </swiper-item>
      </swiper>
    </view>
    <view class="holContainer">
      <view class="leftText">节日</view>
      <view class="holiday">
        <view class="dot"></view>
        <view class="content">无</view>
      </view>
    </view>
    <block wx:if="list.length > 0">
      <view class="resultPanel" wx:for="{{list}}" wx:key="{{key}}">
        <!-- 左边子容器 -->
        <view class="leftIcon">
          <view class="topLine" wx:if="{{item.day!=0}}"></view>
          <view class="dot" wx:if="{{item.day!=0}}" style='background:{{item.month}}'></view>
          <view class="dotFirst" wx:if="{{item.day==0}}"></view>
          <view class="bottomLine"></view>
        </view>
        <!-- 右边子容器 -->
        <view class="resultDesc">
          <view class="resultDate">{{item.year}}</view>
          <view class="resultTitle">{{item.title}}</view>
        </view>
      </view>
    </block>
  </view>
</view>