
.date{
  width:100%;
  height: 30px;
  display: flex;
}

.date .dateDetail{
  margin-left: 5px;
  font-size: 30px;
}

.date .dateYearWeek{
  margin-left: 5px;
  font-size:12px;
  margin-top:5px; 
}

/*日期底下的线*/
.line{
  width:100%;
  height:3rpx;
  background:#aaa;
  margin-top:5px;
  margin-bottom: 10px;
}

.swiper{
  margin-left: 10%;
}
/*左边时间线和右边事件年份的总框架*/
.resultPanel{
  width:100%;
  height: 122rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

/*左边的时间线的框架*/
.leftIcon{
  display: flex;
  flex-direction: column;
  padding-top:20rpx;

}

.topLine{
  width:1rpx;
  height:50rpx;
  background: #d7d7d7;
  margin-left: 30rpx;
}
/*第一个点要特殊对待*/
.dotFirst{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-bottom:6rpx;
  background: #fe4f33;
  margin-top:20px;
}

.dot{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-bottom:6rpx;
  background: #fe4f33;
}

.bottomLine{
  width:1rpx;
  height:50rpx;
  background: #d7d7d7;
  margin-left: 30rpx;
}

/*右边的年份和事件*/
.resultDesc{
  margin-top:20rpx;
  margin-left:20rpx;
  display:flex;
  text-align: center;
  justify-content: center;
}

.resultDate{
  margin-left: 20rpx;
  font-size:28rpx;
  color:#333;
}

.resultTitle{
  font-size:24rpx;
  color:#333;
  margin-left: 20rpx;
  padding-top:3rpx;
}