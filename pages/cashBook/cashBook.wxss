.topBar {
    background-color: rgb(172, 244, 236);
    width: auto;
    height: 25px;
    text-decoration-color: black;
}

.bill {
    margin-left: 20px;
    margin-right: 20px;
    width: auto;
    height: auto;
}

.line {
    margin: 0 auto;
    width: 100%;
    height: 1rpx;
    background-color: rgb(165, 159, 159);
    align-items: center;
}

.icon {
    width: 60rpx;
    height: 60rpx;
    border: 1px;
    /* background-color: #f10b2e; */
    border-radius: 100rpx;
    position: relative;
    bottom: 7px;
}

.moneyIO {
    width: 100%;
    height: auto;
}

.singleBill {
    width: 100%;
    height: auto;
}

.usefulness {
    font-size: 13px;
    position: relative;
    bottom: 20px;
    margin-top: -20px;
    font-weight: 600;
    color: rgb(93, 204, 240);
}

.comment {
    font-size: 13px;
    position: relative;
    right: 26px;
}