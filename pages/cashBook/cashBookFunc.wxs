var month = function (val) {
  if (val.length < 8 || val.length > 10) {
    return "Unknown";
  }
  if (val[5] == "0") {
      return val[6];
  } else {
      return val.substring(5, 7);
  }
  return "Unknown";
}

var date = function (val) {
  if (val.length < 8 || val.length > 10) {
    return "Unknown";
  }
  if (val[val.length - 2] == '0') {
    return val[val.length-1];
  }else {
    return val.substring(val.length-2);
  }
}

var color = function (val) {
  if (val < 0) {
    return "red";
  } else if (val > 0) {
    return "green";
  } else if (val == 0) {
    return "black";
  }
}

var iconPath = function (val) {
  return "/images/cashBook/" + val.usefulness + ".png";
}

module.exports.month = month;
module.exports.date = date;
module.exports.color = color;
module.exports.iconPath = iconPath;